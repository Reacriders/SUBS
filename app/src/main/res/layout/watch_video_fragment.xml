<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorOnPrimary">
    <LinearLayout
        android:id="@+id/BackBtn"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Back"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:background="?attr/colorOnPrimary"
        android:id="@+id/VideoView_Data_UI">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/videoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/videoImage720"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/video_err"
                    android:background="?attr/colorOnPrimary"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/shadowLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow"
                    android:orientation="vertical"></LinearLayout>
            </FrameLayout>

            <ImageView
                android:id="@+id/watchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play"
                app:layout_constraintTop_toTopOf="@id/videoImage"
                app:layout_constraintBottom_toBottomOf="@id/videoImage"
                app:layout_constraintStart_toStartOf="@id/videoImage"
                app:layout_constraintEnd_toEndOf="@id/videoImage"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="?attr/colorSecondaryVariant"
                android:scaleType="centerCrop"
                app:civ_border_width="7dp"
                app:civ_border_color="?attr/colorOnPrimary"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/videoImage"
                app:layout_constraintBottom_toBottomOf="@id/videoImage"
                app:layout_constraintStart_toStartOf="@id/videoImage"
                app:layout_constraintEnd_toEndOf="@id/videoImage"/>
            <ImageView
                android:id="@+id/checked_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/green"
                app:layout_constraintBottom_toBottomOf="@id/profileImage"
                app:layout_constraintEnd_toEndOf="@id/profileImage"
                android:src="@drawable/ic_checked_f"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/videoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00:00"
                android:textColor="@color/white"
                android:background="@color/tr_black"
                android:padding="3dp"
                app:layout_constraintBottom_toBottomOf="@id/videoImage"
                app:layout_constraintEnd_toEndOf="@id/videoImage"/>
            <LinearLayout
                android:id="@+id/Naming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="7dp"
                app:layout_constraintTop_toBottomOf="@id/profileImage"
                app:layout_constraintStart_toStartOf="@id/profileImage"
                app:layout_constraintEnd_toEndOf="@id/profileImage">
                <TextView
                    android:id="@+id/videoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="@drawable/vidbord"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:paddingHorizontal="5dp"
                    android:layout_marginVertical="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/tags"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/vidbord"
                    android:backgroundTint="?attr/colorSecondaryVariant"
                    android:paddingHorizontal="5dp"
                    android:singleLine="true"
                    android:ellipsize="end" />
                <LinearLayout
                    android:id="@+id/accountLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/account"
                        android:layout_width="160dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textSize="17dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/left_border"
                        android:backgroundTint="?attr/colorSecondaryVariant"
                        android:paddingHorizontal="5dp"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <ImageView
                        android:id="@+id/accountCopyBtn"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_copy"
                        android:background="@drawable/right_border"
                        android:backgroundTint="@color/blue"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/reportWarnLL"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="30dp">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        app:tint="@color/red"
                        android:src="@drawable/ic_warning" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vidbord"
                        android:backgroundTint="@color/tr_red"
                        android:padding="12dp"
                        android:text="Warning: The following video contains over 100 reports and may contain objectionable content."/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/flashWarnLL"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="30dp">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        app:tint="@color/yellow"
                        android:src="@drawable/ic_warning_r" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vidbord"
                        android:backgroundTint="@color/tr_yellow"
                        android:padding="12dp"
                        android:text="The following video contains bright, flashing lights \n\and/or imagery that may cause discomfort \n\and/or seizures for those with photosensitive epilepsy. Viewer discretion is advised."/>

                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/likeLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="20dp"
                        android:text="Like"/>
                    <ProgressBar
                        android:id="@+id/likePb"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/likeTick"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_checked_f"
                        app:tint="@color/green"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/subscribeLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="20dp"
                        android:text="Subscribe"/>
                    <ProgressBar
                        android:id="@+id/subscribePb"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/subscribeTick"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_checked_f"
                        app:tint="@color/green"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>